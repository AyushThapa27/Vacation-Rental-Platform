<% layout("/layouts/boilerplate") %>
<body>
  <div class="row">
    <div class="col-6 offset-3">
      <br />
      <h1>Create New Listing</h1>
      <form
        method="POST"
        action="/listings"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            id="title"
            placeholder="Enter the title"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter valid Title</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label"> Description </label>
          <textarea
            name="listing[description]"
            id="description"
            class="form-control"
            placeholder="Enter the description"
            required
          ></textarea>
          <div class="invalid-feedback">Enter valid Description</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label"> Image </label>
          <input
            type="url"
            name="listing[image]"
            id="image"
            class="form-control"
            placeholder="Enter the image url"
          />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              class="form-control"
              type="number"
              name="listing[price]"
              id="price"
              placeholder="Enter the price"
              required
            />
            <div class="invalid-feedback">Enter valid Price</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              class="form-control"
              name="listing[country]"
              id="country"
              placeholder="Enter the country"
              required
            />

            <div class="invalid-feedback">Enter valid Country</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            class="form-control"
            type="text"
            name="listing[location]"
            id="location"
            placeholder="Enter the location"
            required
          />
          <div class="invalid-feedback">Enter valid Location</div>
        </div>
        <button class="btn btn-dark add-btn">Add</button>
        <br />
        <br />
      </form>
    </div>
  </div>
</body>
